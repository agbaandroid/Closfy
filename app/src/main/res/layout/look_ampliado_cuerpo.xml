<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/fondo_cuadros"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/look"
            android:textColor="#6e6e6e"
            android:textSize="13dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="#eeeeee" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/fondoPrendas"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="4"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/layoutPrendaCuerpo"
                        android:layout_width="140dp"
                        android:layout_height="190dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/cuadro_prenda"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/prendaCuerpo"
                            android:layout_width="125dp"
                            android:layout_height="175dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/cruzPrendaCuerpo"
                            android:layout_width="115dp"
                            android:layout_height="150dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/cuerpo_sin" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutPrendaAbrigo"
                        android:layout_width="140dp"
                        android:layout_height="170dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/cuadro_prenda"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/prendaAbrigo"
                            android:layout_width="125dp"
                            android:layout_height="155dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/cruzPrendaAbrigo"
                            android:layout_width="115dp"
                            android:layout_height="110dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/abrigo_mujer_sin" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutPrendaCuerpo"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60dp"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/layoutPrendaCalzado"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/cuadro_prenda"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/prendaCalzado"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="1dp"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/cruzPrendaCalzado"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/calzado_mujer_sin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutPrendaCompl1"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/layoutPrendaCalzado"
                            android:background="@drawable/cuadro_prenda"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/prendaCompl1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="1dp"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/cruzPrendaCompl1"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/complemento_mujer_sin" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layoutPrendaCompl2"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/layoutPrendaCompl1"
                            android:background="@drawable/cuadro_prenda"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/prendaCompl2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="1dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_marginTop="1dp"
                                android:visibility="invisible" />

                            <ImageView
                                android:id="@+id/cruzPrendaCompl2"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/bolso_sin" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/botonVolver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fondo_cuadros"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/volver"
            android:textColor="#000000"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>