<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="160dp"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"            
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:background="#FFFFFF"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/fondoPrendas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/layoutPrendaSup"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/cuadro_prenda"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/prendaSup"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/cruz_roja"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/cruzPrendaSup"
                            android:layout_width="40dp"
                            android:layout_height="35dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/parte_superior_sin" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutPrendaAbrigo"
                        android:layout_width="57dp"
                        android:layout_height="67dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/cuadro_prenda"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/prendaAbrigo"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/cruz_roja"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/cruzPrendaAbrigo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/abrigo" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutPrendaInf"
                        android:layout_width="57dp"
                        android:layout_height="77dp"
                        android:layout_below="@+id/layoutPrendaSup"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/cuadro_prenda"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/prendaInf"
                            android:layout_width="45dp"
                            android:layout_height="60dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/cruz_roja"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/cruzPrendaInf"
                            android:layout_width="30dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/parte_inferior_sin" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutPrendaCompl1"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/layoutPrendaAbrigo"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/cuadro_peq"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/prendaCompl1"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/cruz_roja"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/cruzPrendaCompl1"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/complemento_mujer_sin" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutPrendaCompl2"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/layoutPrendaCompl1"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/cuadro_peq"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/prendaCompl2"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/cruz_roja"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/cruzPrendaCompl2"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bolso_sin" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutPrendaCalzado"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignTop="@+id/layoutPrendaCompl1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/layoutPrendaInf"
                        android:background="@drawable/cuadro_peq"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/prendaCalzado"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/cruz_roja"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/cruzPrendaCalzado"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/calzado_mujer_sin" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>